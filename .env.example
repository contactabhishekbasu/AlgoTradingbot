# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=trading
POSTGRES_USER=trading_user
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://trading_user:your_secure_password_here@localhost:5432/trading

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://localhost:6379/0

# API Keys (will be encrypted in production)
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Model Configuration
MODEL_PATH=./models
MODEL_DEVICE=mps  # Use Metal Performance Shaders on M4

# Application Settings
ENVIRONMENT=development
LOG_LEVEL=INFO
LOG_PATH=./logs
DEBUG=true

# Performance Settings
CACHE_TTL=300  # 5 minutes in seconds
MAX_WORKERS=4
BATCH_SIZE=32
RATE_LIMIT_REQUESTS=2000  # per hour
RATE_LIMIT_PERIOD=3600  # in seconds

# Trading Settings (for future use)
PAPER_TRADING=true
INITIAL_CAPITAL=100000
MAX_POSITION_SIZE=10000
MAX_DRAWDOWN=0.15  # 15%
STOP_LOSS=0.05  # 5%
